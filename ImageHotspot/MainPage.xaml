                <Canvas>
                    <controls:HotspotControl Diameter="100" Foreground="Green" CenterRelativeX="60.0" CenterRelativeY="80.0">
                        <SymbolIcon Symbol="Account" Foreground="White"/>
                    </controls:HotspotControl>
                </Canvas>
            </Grid>
        </Viewbox>
        -->
    </Grid>
</Page>
